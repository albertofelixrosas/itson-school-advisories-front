# =========================================
# SCHOOL ADVISORIES SYSTEM - FRONTEND
# Environment Variables Template
# =========================================
# Copy this file to .env.development or .env.production
# and fill in the appropriate values

# ==========================================
# Backend API Configuration
# ==========================================
# Base URL of the NestJS backend API
VITE_API_BASE_URL=http://localhost:3000

# Request timeout in milliseconds
VITE_API_TIMEOUT=10000

# ==========================================
# JWT Authentication Configuration
# ==========================================
# Cookie/storage key for access token
VITE_JWT_STORAGE_KEY=auth_token

# Cookie/storage key for refresh token
VITE_REFRESH_TOKEN_KEY=refresh_token

# Buffer time before token expiry to refresh (milliseconds)
VITE_TOKEN_EXPIRY_BUFFER=300000

# ==========================================
# Application Configuration
# ==========================================
# Application display name
VITE_APP_NAME=School Advisories System

# Application version
VITE_APP_VERSION=1.0.0

# Environment: development | production | staging
VITE_ENVIRONMENT=development

# ==========================================
# Feature Flags
# ==========================================
# Enable toast notifications
VITE_ENABLE_NOTIFICATIONS=true

# Enable real-time updates (WebSocket)
VITE_ENABLE_REAL_TIME=false

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable debug mode (shows console logs, DevTools, etc.)
VITE_DEBUG_MODE=true

# ==========================================
# Theme Configuration
# ==========================================
# Theme mode: light | dark
VITE_THEME_MODE=light

# Primary theme color (hex format)
VITE_THEME_PRIMARY_COLOR=#1976d2

# Secondary theme color (hex format)
VITE_THEME_SECONDARY_COLOR=#dc004e

# ==========================================
# Localization
# ==========================================
# Default locale for date formatting and UI
VITE_DEFAULT_LOCALE=es

# Timezone for date/time operations
VITE_DEFAULT_TIMEZONE=America/Mexico_City
